<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B412D"
    android:clipChildren="true"
    android:clipToPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="800dp"
        android:layout_gravity="top"
        android:clipChildren="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/findgameTitleCV"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:translationY="-70dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/findgameTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:textAlignment="viewStart"
                android:textColor="#C9000000"
                android:textSize="36dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="800dp"
            android:foregroundGravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mockup_findgamebg" />

        <ImageView
            android:id="@+id/findgamePugIV"
            android:layout_width="146dp"
            android:layout_height="96dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="@id/findgameTree2"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="@id/findgameTree2"
            app:layout_constraintTop_toTopOf="@+id/findgameTree2"
            app:srcCompat="@drawable/mockup_findgamedog4" />

        <ImageView
            android:id="@+id/findgameHuskyIV"
            android:layout_width="78dp"
            android:layout_height="73dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/findgameTree3"
            app:layout_constraintEnd_toEndOf="@+id/findgameTree3"
            app:srcCompat="@drawable/mockup_findgamedog5" />

        <ImageView
            android:id="@+id/findgameTree3"
            android:layout_width="300dp"
            android:layout_height="299dp"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="228dp"
            app:layout_constraintEnd_toEndOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgametree3" />

        <ImageView
            android:id="@+id/findgameTree1"
            android:layout_width="235dp"
            android:layout_height="305dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="168dp"
            app:layout_constraintStart_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgametree1" />

        <ImageView
            android:id="@+id/findgameCorgiIV"
            android:layout_width="148dp"
            android:layout_height="89dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/findgameTree2"
            app:layout_constraintEnd_toEndOf="@+id/findgameTree2"
            app:srcCompat="@drawable/mockup_findgamedog1" />

        <ImageView
            android:id="@+id/findgameTree2"
            android:layout_width="404dp"
            android:layout_height="514dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgametree2" />

        <ImageView
            android:id="@+id/findgameBenchIV"
            android:layout_width="179dp"
            android:layout_height="158dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="520dp"
            android:rotation="-5"
            app:layout_constraintStart_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgamebench" />

        <ImageView
            android:id="@+id/findgameJrterrierIV"
            android:layout_width="125dp"
            android:layout_height="101dp"
            android:layout_marginBottom="252dp"
            android:translationX="50dp"
            app:layout_constraintBottom_toBottomOf="@id/imageView12"
            app:layout_constraintEnd_toEndOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgamedog2" />

        <ImageView
            android:id="@+id/findgameDachshundIV"
            android:layout_width="136dp"
            android:layout_height="132dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="@+id/findgameLeavesIV"
            app:layout_constraintTop_toTopOf="@+id/findgameLeavesIV"
            app:srcCompat="@drawable/mockup_findgamedog3" />

        <ImageView
            android:id="@+id/findgameLeavesIV"
            android:layout_width="252dp"
            android:layout_height="248dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="520dp"
            app:layout_constraintStart_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12"
            app:srcCompat="@drawable/mockup_findgameleavespile" />

        <ImageView
            android:id="@+id/findgameBalloonsIV"
            android:layout_width="63dp"
            android:layout_height="88dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mockup_findgamebaloons" />

        <ImageView
            android:id="@+id/findgameTerrierIV"
            android:layout_width="75dp"
            android:layout_height="56dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="@+id/findgameBalloonsIV"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/findgameBalloonsIV"
            app:layout_constraintTop_toTopOf="@+id/findgameBalloonsIV"
            app:srcCompat="@drawable/mockup_findgamedog6" />

        <androidx.cardview.widget.CardView
            android:id="@+id/findgameProgressCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="156dp"
            android:translationX="-80dp"
            app:cardCornerRadius="33dp"
            app:contentPadding="8dp"
            app:layout_constraintStart_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/imageView12">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="268dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/findgamePugIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgamepug"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/findgameCorgiIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgamecorgi"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/findgameJrterrierIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgamejrterrier"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/findgameTerrierIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgameterrier"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/findgameDachshundIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgamedachshund"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/findgameHuskyIconIV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.1"
                    app:srcCompat="@drawable/mockup_findgamehusky" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/reloadbtCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:translationX="-80dp"
        android:translationY="80dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/gameCircleBarLeftIV"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/mockup_circlebar" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/zen_brush_symbol" />

    </androidx.cardview.widget.CardView>


    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/findgameConfettiKV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone"/>

</FrameLayout>