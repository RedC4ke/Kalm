<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:backgroundTint="#28FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/drawgameTitleCV"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:translationY="-70dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/drawgameTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/gloria_hallelujah"
            android:textAlignment="viewStart"
            android:textColor="#C9000000"
            android:textSize="36dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="80dp"
        android:translationY="80dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/mockup_circlebar" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/mockup_tick" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="-80dp"
        android:translationY="80dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/mockup_circlebar" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="28dp"
            app:srcCompat="@drawable/zen_brush_symbol" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/drawgameCanvasIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mockup_canvas" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#00131313"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FB0606"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="82dp"
            android:paddingEnd="82dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mockup_eraser_colored" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/secondary"
                    app:cardCornerRadius="23dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="23dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="23dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />
            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>