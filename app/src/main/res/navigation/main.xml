<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/landingFragment"
        android:name="com.redc4ke.kalm.ui.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_BirdGame"
            app:destination="@id/birdGameFragment" />
        <action
            android:id="@+id/action_DrawGame"
            app:destination="@id/drawGameFragment" />
        <action
            android:id="@+id/action_WordGame"
            app:destination="@id/wordGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/birdGameFragment"
        android:name="com.redc4ke.kalm.ui.BirdGameFragment"
        android:label="fragment_bird_game"
        tools:layout="@layout/fragment_bird_game" >
        <action
            android:id="@+id/action_BirdGame_DrawGame"
            app:destination="@id/drawGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/drawGameFragment"
        android:name="com.redc4ke.kalm.ui.DrawGameFragment"
        android:label="DrawGameFragment" >
        <action
            android:id="@+id/action_DrawGame_BirdGame"
            app:destination="@id/birdGameFragment" />
        <action
            android:id="@+id/action_DrawGame_FindGame"
            app:destination="@id/findGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/findGameFragment"
        android:name="com.redc4ke.kalm.ui.FindGameFragment"
        android:label="FindGameFragment" />
    <fragment
        android:id="@+id/wordGameFragment"
        android:name="com.redc4ke.kalm.ui.WordGameFragment"
        android:label="WordGameFragment" />
</navigation>